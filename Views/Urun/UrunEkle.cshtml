@model alısveristakip.Models.entity.urun
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" required="" maxlength="30"/>
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m=>m.kategori.KategoriID,(List<SelectListItem>)ViewBag.dgr,new { @class = "form-control" })
    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>
    <div>
        <label>Markası</label>
        <input type="text" class="form-control" name="Marka" required="" placeholder="Buraya Markayı Yazınız" />
    </div>
    <div>
        <label>Stok Adeti</label>
        <input type="text" class="form-control" name="Stok" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>


